<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detailbgcolorupper"
    tools:context=".DetailSwap">
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="280dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:cardBackgroundColor="@color/detailbgcolorlower"
         android:id="@+id/card"
         app:cardElevation="0dp"/>


     <ImageView
         android:id="@+id/image_bootdetail"
         android:layout_width="220dp"
         android:layout_height="130dp"
         android:scaleType="fitXY"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:layout_marginStart="90dp"
         android:layout_marginEnd="74dp"
         android:layout_marginTop="50dp"
         tools:ignore="MissingConstraints" />

     <ImageButton
         android:id="@+id/textviewf_circle"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/image_bootdetail"
         android:layout_marginStart="66dp"
         android:layout_width="78dp"
         android:layout_height="78dp"
         android:layout_marginTop="55dp"
         android:background="@drawable/circularbackground"
         tools:ignore="MissingConstraints" />

     <ImageView
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:background="@drawable/vectorcross"
         app:layout_constraintBottom_toBottomOf="@id/textviewf_circle"
         app:layout_constraintEnd_toEndOf="@id/textviewf_circle"
         app:layout_constraintStart_toStartOf="@id/textviewf_circle"
         app:layout_constraintTop_toTopOf="@id/textviewf_circle" />

     <ImageButton
         android:id="@+id/textviews_circle"
         app:layout_constraintStart_toEndOf="@id/textviewf_circle"
         app:layout_constraintTop_toBottomOf="@id/image_bootdetail"
         android:layout_marginStart="20dp"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_marginTop="45dp"
         android:background="@drawable/circularbackgroundcenter"
         tools:ignore="MissingConstraints" />

     <ImageView
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:background="@drawable/vectorheart"
         app:layout_constraintStart_toStartOf="@id/textviews_circle"
         app:layout_constraintEnd_toEndOf="@id/textviews_circle"
         app:layout_constraintTop_toTopOf="@id/textviews_circle"
         app:layout_constraintBottom_toBottomOf="@id/textviews_circle"/>

     <ImageButton
         android:id="@+id/textviewt_circle"
         app:layout_constraintStart_toEndOf="@id/textviews_circle"
         app:layout_constraintTop_toBottomOf="@id/image_bootdetail"
         android:layout_marginStart="20dp"
         android:layout_width="78dp"
         android:layout_height="78dp"
         android:layout_marginTop="55dp"
         android:background="@drawable/circularbackground"
         tools:ignore="MissingConstraints" />
     <ImageView
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:background="@drawable/vectorstar"
         app:layout_constraintBottom_toBottomOf="@id/textviewt_circle"
         app:layout_constraintEnd_toEndOf="@id/textviewt_circle"
         app:layout_constraintStart_toStartOf="@id/textviewt_circle"
         app:layout_constraintTop_toTopOf="@id/textviewt_circle" />


     <TextView
         android:id="@+id/textview_about"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="40dp"
         android:layout_marginTop="15dp"
         android:fontFamily="@font/poppins_medium"
         android:text="About"
         android:textColor="@color/black"
         android:textSize="26sp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/textviewf_circle" />

     <TextView
         android:id="@+id/textview_mydetail"
         android:layout_width="363dp"
         android:layout_height="86dp"
         android:layout_marginStart="40dp"
         android:layout_marginEnd="45dp"
         android:text="My name is Jessica Parker and I enjoy meeting new people and finding ways to help them have an uplifting experience. I enjoy reading.."
         android:textColor="@color/black"
         android:textSize="16sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="@id/textview_about"
         app:layout_constraintTop_toBottomOf="@id/textview_about" />

     <TextView
         android:id="@+id/textview_location"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="40dp"
         android:layout_marginTop="30dp"
         android:fontFamily="@font/poppins_medium"
         android:text="Location"
         android:textColor="@color/black"
         android:textSize="22sp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/textview_mydetail" />

     <TextView
         android:id="@+id/textview_islamabad"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="40dp"
         android:fontFamily="@font/poppins_extralight"
         android:text="Islamabad"
         android:textColor="@color/black"
         android:textSize="22sp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/textview_location" />

     <Button
         android:id="@+id/button_swapdetail"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/textview_islamabad"
         android:text="Offer Swap"
         android:textAllCaps="false"
         android:textColor="@color/white"
         android:layout_marginTop="35dp"
         android:paddingStart="30dp"
         android:paddingEnd="30dp"
         android:textSize="16sp"
         android:background="@drawable/cornerbutton"/>

</androidx.constraintlayout.widget.ConstraintLayout>